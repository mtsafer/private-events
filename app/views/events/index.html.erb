<% if !logged_in? %>
	<div class="center">
		<%= link_to "Sign Up!", new_user_path, class: "btn btn-primary" %>
	</div>
<% else %>	
	<div class="center">
		<%= link_to "Plan an event!", new_event_path, class: "btn btn-primary" %>
	</div>
	<h2>Upcoming Events</h2>
	<%= render partial: 'shared/titles' if @events_future.any? %>
	<div class="panel-group" id="accordion1">
		<% @events_future.each do |event| %>
			<%= render partial: 'shared/accordion', locals: { event: event, parent: 'accordion1' } %>
		<% end %>
	</div>

	<h2>Past Events</h2>
	<%= render partial: 'shared/titles' if @events_past.any?%>
	<div class="panel-group" id="accordion2">
		<% @events_past.each do |event| %>
			<%= render partial: 'shared/accordion', locals: { event: event, parent: 'accordion2' } %>
		<% end %>
	</div>
<% end %>